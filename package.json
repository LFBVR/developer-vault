{
  "name": "developer-vault",
  "version": "0.1.0",
  "description": "All-in-one toolbox",
  "author": "developer-vault",
  "dependencies": {
    "prop-types": "^15.6.1",
    "raven-js": "^3.22.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.7",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0"
  },
  "scripts": {
    "start": "run-p start:react wait-and-start",
    "start:react": "cross-env BROWSER=none node scripts/start.js",
    "start:electron": "cross-env ELECTRON_START_URL=http://localhost:3000/ electron .",
    "wait-react": "wait-on http://localhost:3000/",
    "wait-and-start": "run-s wait-react start:electron",
    "build": "run-s build:react build:electron",
    "build:react": "node scripts/build.js",
    "build:electron": "electron-builder -p \"onTagOrDraft\" ",
    "pack": "run-s build:react pack:electron",
    "pack:electron": "electron-builder --dir",
    "lint": "run-p lint:**",
    "lint:js": "eslint ./src --ext=js --ext=jsx --fix",
    "lint:scss": "stylelint \"src/**/*.scss\" --syntax scss --fix",
    "test": "node scripts/test.js --env=jsdom",
    "extract:messages": "react-intl-cra src/**/*.jsx -o resources/translations/messages.json",
    "extract:pot": "react-intl-po json2pot resources/translations/messages.json -o resources/translations/messages.pot",
    "extract:po": "react-intl-po po2json resources/translations/*.po -m resources/translations/messages.json -o src/i18n/messages.json"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@babel/preset-react": "^7.0.0-beta.40",
    "@babel/preset-stage-1": "^7.0.0-beta.40",
    "autoprefixer": "^8.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "chalk": "^2.3.1",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.7",
    "dotenv": "^5.0.1",
    "dotenv-expand": "^4.0.1",
    "electron": "^1.7.12",
    "electron-builder": "^19.0.0",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.12.2",
    "eslint-plugin-jsdoc": "^3.5.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "fs-extra": "^5.0.0",
    "hoek": "^4.2.1",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^22.4.2",
    "npm-run-all": "^4.1.2",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-loader": "^2.0.8",
    "raf": "^3.4.0",
    "react-dev-utils": "^5.0.0",
    "react-intl-cra": "^0.3.3",
    "react-intl-po": "^2.1.3",
    "redux-mock-store": "^1.5.1",
    "style-loader": "^0.20.2",
    "style-loader": "^0.20.2",
    "stylelint": "^9.1.1",
    "sw-precache-webpack-plugin": "^0.11.4",
    "url-loader": "^0.6.2",
    "wait-on": "^2.1.0",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.11.2",
    "webpack-manifest-plugin": "^1.3.2",
    "whatwg-fetch": "^2.0.3"
  },
  "homepage": "./",
  "main": "src/electron.js",
  "build": {
    "appId": "org.developer-vault.developer-vault-app",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraMetadata": {
      "main": "build/electron.js"
    }
  },
  "repository": "https://github.com/developer-vault/developer-vault",
  "bugs": "https://github.com/developer-vault/developer-vault/issues",
  "license": "MIT"
}
